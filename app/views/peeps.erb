<% if current_user %>
  <form class='peep_input' action="/peeps" method="post">
    Enter Peep: <input type="text" name="peep">
    <input type="submit" value="Add peep">
  </form>
<%else%>
  <p><a href='/'><button type="button">Return Home</button></a></p>
<% end %>


<a class='entry'>
  <% @peep.each do |peep| %>
  <li class='peep'>
    <%= peep.peep %>
      <div class='user_details'>
        By: <%= peep.user.name%>
        <form class='peep_input' action="/reply" method="post">
          <input type="submit" value=<%= peep.user.user_name %> name="post" >
        </form>
      </div>
    <% end %>
  </li>
</a>

